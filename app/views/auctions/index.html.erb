<div class="container">
        <hr/>
        
        <div class="row">
            
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-12">
                        <h4>Your Account</h4>
                    </div>
                    
                    <div id="profile-menu" class="col-md-12">
                        <%= render :partial => '/users/agent_menu' %>
                    <hr/>
                    </div>
                </div>
            </div>

            <div class="col-md-1 auction-chevron-navigation">
                <%= render 'chevron_index' %>
            </div>
            
            <div id="user-auction-list" class="col-md-12 last-profile-section">

                <!-- -->
                <div class="row">
                
                <% @auctions.each do |auction| %>
                    <div class="col-sm-4 col-xs-6 col-md-4 user-bid-history-card">
                    <div class="panel panel-default user-bid-history-card-container">
                      <div class="panel-thumbnail">
                        <%= image_tag(auction.photo.main_photo.card.url, alt: 'Image', class: 'img-responsive') if auction.photo %>
                      </div>
                      <div class="panel-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-6">
                                        
                                        <%= link_to "EDIT", edit_user_auction_path(current_user.id, auction.id), :class=>"btn btn-default dark-button card-edit-button" %>
                                    </div>
                                    <div class="col-md-6">
                                        <%= link_to "DELETE", user_auction_path(current_user.id, auction.id), data:{:confirm => "Are you sure you want to delete this auction?", method: :delete}, :class=>"btn btn-default dark-button card-edit-button" %>
                                    </div>
                                </div>
                            </div>
                        </div>
                      </div>
                    </div>
                    </div>

                <% end %>

                </div>
                <!-- -->

            </div>
        
      </div>
</div>